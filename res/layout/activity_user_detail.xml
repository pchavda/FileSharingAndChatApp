<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserDetailActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/iv_user_pic_user_detail"
            android:layout_width="75dp"
            android:layout_height="75dp"
           
            android:src="@drawable/user_profile_pic_main"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_name_user_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:layout_weight="1"/>

        <View
     android:layout_width="1dp"
     android:layout_height="match_parent"
     android:background="@android:color/darker_gray" />
        
        <ImageButton
            android:id="@+id/ib_goto_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:background="@android:color/transparent"
            android:src="@drawable/group_info_chevron_right" 
            android:layout_weight="1"/>
        
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="5dp"
        android:background="@color/light_green" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:paddingLeft="5dp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="5dp"
        android:text="@string/hint_new_status" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
        android:background="@color/light_green" />

    <TextView
        android:id="@+id/tv_status_user_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:layout_marginTop="5dp"
         android:paddingLeft="5dp"
        android:text="@string/hint_new_status"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_status_user_detail"
        android:layout_marginTop="10dp"
        android:background="@color/light_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_status_user_detail"
        android:layout_below="@+id/tv_status_user_detail"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tv_user_mobile_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medium Text"
             android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/tv_user_chat_list_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/iv_dial_number_user_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/stat_sys_phone_call_forward" />
    </LinearLayout>

</RelativeLayout>