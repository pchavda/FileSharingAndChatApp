<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/iv_image_gruop_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/user_profile_pic_main" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_image_gruop_image"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_image_gruop_image"
        android:text="@string/help_text_group"
        android:textColor="@color/gray_a" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/iv_image_gruop_image"
        android:layout_below="@+id/iv_image_gruop_image"
        android:layout_marginTop="32dp"
        android:background="@color/gray_a" />

    <EditText
        android:id="@+id/et_group_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/iv_image_gruop_image"
        android:layout_below="@+id/view1"
        android:background="@null" >

        <requestFocus />
    </EditText>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/et_group_name"
        android:layout_below="@+id/et_group_name"
        android:layout_centerVertical="true"
        android:background="@color/gray_a" />

</RelativeLayout>