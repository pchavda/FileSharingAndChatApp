<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ab_solid_gonechat_actionbar"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp" >

    <ImageView
        android:id="@+id/iv_image_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
       
        
        android:layout_marginRight="8dip" />

    <LinearLayout
        android:id="@+id/ll_title_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ab_solid_gonechat_actionbar"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_actionbar"
            style="@style/TextAppearance.Sherlock.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sub_title_actionbar"
            style="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
    </LinearLayout>

</LinearLayout>